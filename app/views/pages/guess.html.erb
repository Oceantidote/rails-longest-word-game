<h1>Enter a word using the letters shown below</h1>

<ul class="list-inline list-unstyled">
  <% @generated_grid.each do |letter| %>
    <li class="btn btn-primary"><%= letter %></li>
  <% end %>
</ul>

<form action="score" method="post" class="form-control">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :start_time, @start_time %>
  <%= hidden_field_tag :grid, @generated_grid %>

  <input type="text" name="user_guess">
  <input type="submit" value="Play">
</form>


